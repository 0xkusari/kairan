<% if logged_in? %>
  <%= image_tag current_user.icon_url, width: 24, height: 24 %>
  <%= current_user.name %>
<% else %>
<script src="https://accounts.google.com/gsi/client" async defer></script>
<div id="g_id_onload"
   data-client_id="195008300544-l5fjtt5i5dboisa5k09pe94dhu8c7gk1.apps.googleusercontent.com"
   data-login_uri="http://localhost:3000/google_auth_callback"
   data-auto_prompt="false">
</div>
<div class="g_id_signin"
   data-type="standard"
   data-size="large"
   data-theme="outline"
   data-text="sign_in_with"
   data-shape="rectangular"
   data-logo_alignment="left">
</div>
<% end %>
